@using Mapsui.Extensions
@inherits MapControl

<div @onpointerup=@OnPointerUp @onpointerdown=@OnPointerDown 
     @onmousewheel=@OnMouseWheel @onmousemove=@OnMouseMove 
     @onkeydown=@OnKeyDown @onkeyup=@OnKeyUp @ondblclick="OnDblClick"
     @ontouchstart=@OnTouchStart @ontouchmove=@OnTouchMove @ontouchend=@OnTouchEnd
     @onwheel="OnMouseWheel"
     name="@_elementId" id="@_elementId">
@if (MapControl.UseGPU)
{
        <SkiaSharp.Views.Blazor.SKGLView
        @ref="_viewGpu"
        OnPaintSurface="OnPaintSurfaceGPU" 
        IgnorePixelScaling="true" />
}
else
{
        <SkiaSharp.Views.Blazor.SKCanvasView 
        @ref="_viewCpu"
        OnPaintSurface="OnPaintSurfaceCPU" 
        IgnorePixelScaling="true" />}
</div>

