<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mapsui.Samples.Forms.BenchmarkSettingsPage"
             Title="Benchmark Settings">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Padding="20,10">
                <Label Text="Enable benchmarking"/>
                <Switch x:Name="BenchmarkingToggle" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
            <Button Text="Erase benchmark history" Clicked="Erase_Clicked"/>

            <ListView x:Name="benchMarkHistory" VerticalOptions="FillAndExpand"
                      ItemSelected="benchMarkHistory_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="20,0">
                                <Label Text="{Binding Name}" HorizontalOptions="StartAndExpand"/>
                                <Label Text="{Binding Time}" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>