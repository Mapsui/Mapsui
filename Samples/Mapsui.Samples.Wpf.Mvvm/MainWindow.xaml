<Window x:Class="Mapsui.Samples.Wpf.Mvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mapsui.Samples.Wpf.Mvvm"
        xmlns:wpf="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>

    <Grid>
        <wpf:MapControl
            Map="{Binding Map, Mode=OneWayToSource}"
            Navigator="{Binding Navigator, Mode=OneWayToSource}"/>
        <Button Content="Add Bing Aerial Layer" Command="{Binding AddBingAerialLayerCommand}" Margin="0,0,665,389"></Button>
        <Button Content="{Binding StartAnimationButtonText}" Command="{Binding StartAnimationCommand}" Margin="0,30,665,359"></Button>
    </Grid>
</Window>
